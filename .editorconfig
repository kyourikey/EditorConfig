###############################
# Core EditorConfig Options   #
###############################

root = true

# All files
[*]
end_of_line = crlf
indent_style = space

# Code files
[*.{cs,csx,vb,vbx}]
indent_size = 4
insert_final_newline = true
charset = utf-8-bom
trim_trailing_whitespace = true

###############################
# Markdown Rules         #
###############################
[*.md]
trim_trailing_whitespace = false
